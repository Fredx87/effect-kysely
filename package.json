{
  "name": "effect-kysely",
  "version": "0.3.0",
  "description": "kysely adapter for effect",
  "type": "module",
  "packageManager": "pnpm@9.0.4",
  "files": [
    "src",
    "dist"
  ],
  "exports": {
    "./*.js": {
      "import": "./dist/*.js",
      "types": "./dist/*.d.ts"
    }
  },
  "homepage": "https://github.com/Fredx87/effect-kysely",
  "repository": {
    "type": "git",
    "url": "https://github.com/Fredx87/effect-kysely.git"
  },
  "scripts": {
    "prepare": "husky install",
    "clean": "tsc --build --clean tsconfig.src.json && rm -rf dist",
    "build": "tsc --build tsconfig.src.json",
    "lint": "eslint .",
    "test": "vitest",
    "tsc:examples": "tsc --noEmit -p tsconfig.examples.json",
    "example:setupDb": "rm examples/db/* && tsx examples/helpers/setupDb.ts",
    "example:base": "tsx examples/base.ts",
    "example:transaction": "tsx examples/transaction.ts",
    "example:sqlfx": "tsx examples/effect-sql.ts"
  },
  "keywords": [
    "effect",
    "kysely",
    "sql",
    "schema"
  ],
  "author": "Gianluca Frediani <gianluca.frediani@outlook.com>",
  "license": "MIT",
  "peerDependencies": {
    "@effect/schema": "^0.66.4",
    "effect": "^3.0.3",
    "kysely": "^0.27.3"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@effect/schema": "^0.66.4",
    "@effect/sql": "^0.1.6",
    "@effect/sql-sqlite-node": "^0.1.6",
    "@tsconfig/node20": "^20.1.4",
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "better-sqlite3": "^9.5.0",
    "effect": "^3.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.0",
    "kysely": "^0.27.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs}": [
      "eslint --fix"
    ],
    "*.{css,json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
